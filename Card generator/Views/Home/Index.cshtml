@model List<Card_generator.Models.CardViewModel>

<div class="container col-md-9">
    <h2>Card Creator</h2>
    <form>
        <div class="col-sm-12 row">
            <select id="cardSelector">
                <option>None</option>
                @foreach (var cardViewModel in Model)
                {
                    <option value="@(cardViewModel.CardID)">@(cardViewModel.TopCenterLabel.Label)</option>
                }
            </select>
            <a id="btn-Convert-Html2Image" href="#">Download</a>
        </div>
    </form>

    @foreach (var cardViewModel in Model)
    {
        Html.RenderPartial("_Card", cardViewModel);
    }
</div>
<div class="container col-md-3">
    <form class="form" id="elementEditor">
        <h3>Edit</h3>
        <div class="form-group">
            <label for="labelInput" class="col-sm-2 control-label">Label</label>
            <div class="col-sm-10">
                <input type="text" id="labelInput" class="label" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2">
                <button type="submit" class="btn btn-default">Preview</button>
            </div>
        </div>
    </form>
</div>
